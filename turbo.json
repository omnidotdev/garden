{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "build/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"format": {
			"dependsOn": ["^format"]
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"knip": {
			"dependsOn": ["^knip"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
