{
  "name": "@omnidotdev/garden",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc -b && vite build",
    "check": "biome check --diagnostic-level=error src",
    "format": "biome format --write src",
    "lint": "biome lint --diagnostic-level=error src",
    "generate:types": "bunx quicktype@23.2.4 -s schema ../../garden.schema.json -o src/generated/garden.types.ts"
  },
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      }
    },
    "./styles.css": "./build/garden.css"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@xyflow/react": "^12.7.0",
    "elkjs": "^0.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-pattern": "^5.7.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.10",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "globby": "^14.1.0",
    "typescript": "5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.2.2"
  }
}
