{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.6/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "apps/**",
      "packages/**",
      "!packages/ui/src/**",
      "!**/generated/**",
      "!**/build/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useSemanticElements": "off",
        "noStaticElementInteractions": "off"
      },
      "correctness": {
        "noUnusedImports": "error"
      },
      "nursery": {
        "useUniqueElementIds": "off",
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe",
          "options": {
            "attributes": ["className"],
            "functions": ["cn, cva"]
          }
        }
      },
      "style": {
        "useImportType": {
          "level": "error",
          "options": { "style": "separatedType" }
        }
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              { "type": false, "source": [":BUN:", ":NODE:"] },
              ":BLANK_LINE:",
              {
                "type": false,
                "source": [
                  ":PACKAGE:",
                  ":PACKAGE_WITH_PROTOCOL:",
                  "!@omnidotdev/**"
                ]
              },
              ":BLANK_LINE:",
              { "type": false, "source": ["**"] },
              ":BLANK_LINE:",
              { "type": true }
            ]
          }
        }
      }
    }
  }
}
