{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Garden",
  "type": "object",
  "required": [
    "categories",
    "name",
    "version"
  ],
  "properties": {
    "categories": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Category"
      }
    },
    "created_at": {
      "type": [
        "string",
        "null"
      ]
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "maintainers": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/definitions/Maintainer"
      }
    },
    "name": {
      "type": "string"
    },
    "theme": {
      "anyOf": [
        {
          "$ref": "#/definitions/Theme"
        },
        {
          "type": "null"
        }
      ]
    },
    "updated_at": {
      "type": [
        "string",
        "null"
      ]
    },
    "version": {
      "type": "string"
    }
  },
  "definitions": {
    "Category": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "categories": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/Category"
          }
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "icon_color": {
          "type": [
            "string",
            "null"
          ]
        },
        "items": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/GardenItem"
          }
        },
        "name": {
          "type": "string"
        }
      }
    },
    "GardenItem": {
      "type": "object",
      "required": [
        "homepage_url",
        "name"
      ],
      "properties": {
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "homepage_url": {
          "type": "string"
        },
        "logo": {
          "type": [
            "string",
            "null"
          ]
        },
        "name": {
          "type": "string"
        },
        "project_url": {
          "type": [
            "string",
            "null"
          ]
        },
        "repo_url": {
          "type": [
            "string",
            "null"
          ]
        },
        "twitter": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Maintainer": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "email": {
          "type": [
            "string",
            "null"
          ]
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Theme": {
      "type": "object",
      "properties": {
        "background_color": {
          "type": [
            "string",
            "null"
          ]
        },
        "primary_color": {
          "type": [
            "string",
            "null"
          ]
        },
        "secondary_color": {
          "type": [
            "string",
            "null"
          ]
        },
        "text_color": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  }
}